/*Check if an array of integers contains a specified number next to each other or there are 
two same specified numbers separated by one element*/

import java.util.*;

public class Main
{

	public static void main(String[] args) {

    int n;
    Scanner sc = new Scanner(System.in);
    n = sc.nextInt();
    int arr[] = new int[n];
    
    for(int i = 0; i<n; i++){
        arr[i] = sc.nextInt();
    }
    
    System.out.println(Arrays.toString(arr));

    for(int i = 0; i<n; i++){
        if ((array[i] == x) && (array[i + 1] == x)) {
            System.out.println(true);
        }else if ((array[i] == x) && (array[i + 2] == x)) {
            System.out.println(true);
        }
    }
   
	    
	}
}
