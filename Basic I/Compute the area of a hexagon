import java.util.Scanner;

public class Main { 

  public static void main(String[] args){ 
      double num;
      Scanner sc = new Scanner(System.in);
      num = sc.nextDouble();
      System.out.print(area(num));
   }
  
    public static double area(double num){
      double area = (6 * (num*num))/(4*Math.tan(Math.PI/6));
      return area;
  }
  
}
